<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="false"
        android:background="#1CB6CA"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25sp"
        android:alpha="0.7"
        android:text="EnteR YouR CitY"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/cityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="20sp"
        android:ems="10"
        android:inputType="textAutoCorrect|textPersonName|textAutoComplete"
        android:isScrollContainer="true"
        android:shadowColor="#FBF6F6"
        android:textColor="#F8F5F5"
        android:textColorHighlight="#EDE7E7"
        android:textColorHint="#EFE5E5"
        android:textColorLink="#F1EFEF" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cityName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:alpha="0.6"
        android:background="#5A090909"
        android:clickable="true"
        android:onClick="checkWeather"
        android:padding="10sp"
        android:text="CHeck MauSaM"
        android:textColor="#F3EDED"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/resultMau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_centerInParent="true"
        android:layout_marginTop="150sp"
        android:textColor="#F1EEEE"
        android:textSize="30sp" />

</RelativeLayout>